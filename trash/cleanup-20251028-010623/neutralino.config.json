{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "app.screen-note",
  "version": "0.2.0",
  "defaultMode": "window",
  "documentRoot": "/",
  "url": "/index.html",
  "port": 0,
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.execCommand",
    "os.spawnProcess",
    "extensions.*",
    "window.*"
  ],
  "modes": {
    "window": {
      "title": "Screen Note",
      "width": 1280,
      "height": 720,
      "minWidth": 640,
      "minHeight": 480,
      "center": true,
      "transparent": true,
      "alwaysOnTop": true,
      "borderless": true,
      "resizable": true,
      "hidden": false,
      "skipTaskbar": true,
      "enableInspector": true
    }
  },
  "enableExtensions": false,
  "extensions": [],
  "cli": {
    "binaryName": "screen-note",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "6.3.0",
    "clientVersion": "6.3.0"
  }
}